@model List<ProductListComponentViewModel>

<a class="btn btn-outline-primary" asp-controller="Product" asp-action="Index">Ürünlere Git</a>

<table class="table  table-hover">
    <thead>
        <tr>
            <th>İsim</th>
            <th>Açıklama</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Description</td>
            </tr>
        }
    </tbody>
</table>