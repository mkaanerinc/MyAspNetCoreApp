@model VisitorViewModel


<h2>Ziyaretçi Yorumları</h2>
@foreach (var visitor in ViewBag.VisitorViewModel as List<VisitorViewModel>)
{
    <div class="card mt-3" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">@visitor.Name</h5>
            <h6 class="card-subtitle mb-2 text-body-secondary">@visitor.Created.ToShortDateString()</h6>
            <p class="card-text">@visitor.Comment</p>
        </div>
    </div>
}

<hr />

@if (TempData["result"] != null)
{
    <div class="alert alert-success">@TempData["result"]</div>
}

<form asp-controller="Home" asp-action="SaveVisitorComment" method="post">

    <div class="mb-3">
        <label asp-for="Name" class="form-label">İsim</label>
        <input class="form-control" asp-for="Name">
    </div>

    <div class="form-floating mb-3">
        <textarea asp-for="Comment" class="form-control" placeholder="Yorum" style="height: 100px"></textarea>
        <label asp-for="Comment">Yorum</label>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>